<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MenuActivity"
    style="@style/parent.contentLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="187dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:src="@drawable/user_inform">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/earth" />

            <TextView
                style="@style/viewParent.headerText"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Menu" />



                <GridLayout
                    android:layout_width="340dp"
                    android:layout_height="360dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:columnCount="3"
                    android:rowCount="3">

                    <LinearLayout
                        android:id="@+id/CameraView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_rowSpan="2"
                        android:layout_columnSpan="1"
                        android:layout_gravity="fill"
                        android:orientation="vertical"
                        android:background="@drawable/curve_background_view2"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:maxWidth="60dp"
                            android:src="@drawable/cameraimg"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="촬영하기"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="음식사진을\n 촬영해보세요"
                            android:gravity="center"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/UploadView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/curve_background_view2"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:maxWidth="40dp"
                            android:src="@drawable/albumpng"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="앨범에서\n 사진찾기"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/RankingView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="1"
                        android:layout_gravity="fill"
                        android:background="@drawable/curve_background_view2"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:maxWidth="40dp"
                            android:src="@drawable/comimg"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="랭킹"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/CommunityView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="2"
                        android:layout_gravity="fill"
                        android:background="@drawable/curve_background_view2"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:maxWidth="50dp"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/communityimg"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="커뮤니티"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="소통합시다~~"
                                android:gravity="center"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/CalendarView1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="2"
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="2"
                        android:layout_gravity="fill"
                        android:background="@drawable/curve_background_view2"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:maxWidth="50dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/checkfootimg"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="탄소발자취"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="나의 탄소배출량을 \n확인하세요"
                                android:gravity="center"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/CalendarView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_rowSpan="1"
                        android:layout_columnSpan="1"
                        android:layout_gravity="fill"
                        android:orientation="vertical"
                        android:background="@drawable/curve_background_view2"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:maxWidth="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/checkfootimg"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="탄소발자취"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="15sp" />

                    </LinearLayout>
                </GridLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:weightSum="12">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="4"
                android:background="@color/green2" />

            <TextView
                style="@style/viewParent.headerText.NoMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/green2"
                android:text="Made by PLAN B TEAM"
                android:textAlignment="center"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="4"
                android:background="@color/green2" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


