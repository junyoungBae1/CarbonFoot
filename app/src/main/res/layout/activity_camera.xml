<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/kingminseok" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="총 탄소량 결과입니다"
        android:textStyle="bold"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="160dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:orientation= "horizontal"
            android:columnCount="3"
            android:rowCount="2">

            <TextView
                android:text="Co2"
                android:gravity="center"
                android:textColor="@color/green2"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:id="@+id/Co2"
                android:layout_row="0"
                android:layout_column="0"
                />

            <ImageView
                android:id="@+id/tree"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/carimg" />

            <ImageView
                android:src="@drawable/treeimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:id="@+id/mobileImageView"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_column="2" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginBottom="60dp"
                android:id="@+id/Co2Text"
                android:gravity="center"
                android:text="200 (gCo2e)"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_row="1"
                android:layout_column="0" />


            <TextView
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_row="1"
                android:layout_column="1"
                android:gravity="center"
                android:text="약 0.025그루\n(소나무)"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginBottom="40dp"
                android:layout_row="1"
                android:layout_column="2"
                android:gravity="center"
                android:text="약 0.5 km "
                android:textStyle="bold" />

        </GridLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/RegFoodDataBtn"
        style="@style/loginButton"
        android:layout_gravity="center_horizontal"
        android:text="음식 저장하기"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/DetailFoodBtn"
        style="@style/parent"
        android:layout_marginTop="20dp"
        android:onClick="onLoginClick"
        android:text="탄소 세부사항 보기"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/green1"
        android:textSize="15sp" />

</LinearLayout>