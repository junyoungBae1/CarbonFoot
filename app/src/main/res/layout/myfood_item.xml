<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:background="@drawable/curve_background_view">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/ImgOfFoodList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kingminseok" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/NameOfFoodList"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="오곡밥"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/Co2OfFoodList"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="200 kgCo2e"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/TimeOfFoodList"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="2023-10-25 10:00"
        android:gravity="center_horizontal"
        android:textSize="13dp"/>


</LinearLayout>

