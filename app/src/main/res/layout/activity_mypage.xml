<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RegisterActivity"
    android:background="@drawable/curve_background_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_weight="1">

            <LinearLayout
                android:background="@drawable/background_mypage"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

                <TextView
                    style="@style/profileDetailsTextMain"
                    android:text="이름" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/nameMyPage"
                    style="@style/profileDetailsMiniText"
                    android:text="developer"
                    android:textColor="@color/miniDescription"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/background_mypage"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

                <TextView
                    style="@style/profileDetailsTextMain"

                    android:text="ID" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/idMyPage"
                    style="@style/profileDetailsMiniText"
                    android:text="developer@appsnipp.com"
                    android:textColor="@color/miniDescription"/>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/background_mypage"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">


                <TextView
                    style="@style/profileDetailsTextMain"
                    android:text="전화번호" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/phoneMyPage"
                    style="@style/profileDetailsMiniText"

                    android:text="+91-8129999999"
                    android:textColor="@color/miniDescription"/>

            </LinearLayout>




        </LinearLayout>


        <TextView
            android:id="@+id/logoutBtn"
            style="@style/parent"
            android:layout_marginTop="30dp"
            android:onClick="onLoginClick"
            android:text="로그아웃하기"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/green1"
            android:textSize="15sp" />

        <View style="@style/proifleDetailsView" />

    </LinearLayout>

</LinearLayout>