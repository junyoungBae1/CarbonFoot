<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#22000000" /> <!-- 그림자 색상 -->
            <corners android:radius="4dp" />
            <padding
                android:right="5dp"
                android:bottom="5dp" /><!-- 곡선 모서리 반지름 값 -->
        </shape>
    </item>

    <!-- 원본 Drawable -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/whiteTextColor" /> <!-- 곡선 배경색 -->
            <stroke
                android:width="2dp"
                android:color="@color/whiteTextColor" /> <!-- 테두리 선의 색상 -->
            <corners android:radius="6dp" /> <!-- 곡선 모서리 반지름 값 -->
        </shape>
    </item>
</layer-list>